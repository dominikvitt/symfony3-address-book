{% extends 'base.html.twig' %}

{% block body %}
    <h1>Addressbook</h1>

    <table class="table table-bordered col-sm-6">
        <tbody>
            <tr>
                <th class="col-sm-4">Id</th>
                <td class="col-sm-8">{{ addressBook.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ addressBook.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ addressBook.lastname }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ addressBook.street }}</td>
            </tr>
            <tr>
                <th>Housenumber</th>
                <td>{{ addressBook.houseNumber }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ addressBook.zip }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ addressBook.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ addressBook.country }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ addressBook.phone }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ addressBook.birthday }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ addressBook.email }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset('uploads/pictures/' ~ addressBook.picture) }}"></td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-danger" value="Delete" onclick="return confirm('Are you sure you want to delete this address?');">
    {{ form_end(delete_form) }}
    <br>

    <a class="btn btn-info" href="{{ path('addressbook_index') }}">Back to the list</a>
    <a class="btn btn-primary" href="{{ path('addressbook_edit', { 'id': addressBook.id }) }}">Edit</a>

    </ul>
{% endblock %}
